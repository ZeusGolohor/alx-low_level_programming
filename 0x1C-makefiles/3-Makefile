CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
FILE = update
RM = $(NAME) *.o *~
all : new
# To make sure only source file been changed are updated
new : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
# to force recomplilation
re : $(FILE)
	$(MAKE) new
$(FILE) : $(SRC) m.h
	touch $@
# To make sure tgat only update source files are recomplied to object files
$(OBJ) : m.h
.PHONY : clean oclean fclean
clean :
	rm -f *~ $(NAME)
oclean:
	rm -f *.o

fclean: clean oclean
