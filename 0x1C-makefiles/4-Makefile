CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
FILE = update
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
all: new

new: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

re: $(FILE)
	$(MAKE) new

$(FILE): $(SRC) m.h
	touch $@

$(OBJ): m.h

.PHONY: all clean oclean fclean re

clean:
	$(RM) *~ $(NAME) $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: clean


